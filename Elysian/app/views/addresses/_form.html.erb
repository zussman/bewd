<%= simple_nested_form_for @address do |f| %>
  <%= f.error_notification %>

  <%= f.input :line_1 %>
  <%= f.input :line_2 %>
  <%= f.input :city_name, :url => autocomplete_city_name_addresses_path %>
  <%= collection_select( :address, :state_id, State.all, :id, :name, {}, { :multiple => false } ) %>
  <%= f.button :submit %>
<% end %>