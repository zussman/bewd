<h2 class="page-header">Address</h2>
<%= link_to "Add Address", new_address_path %>
<div class="row">
  <div class="col-sm-12">
    <table class="table table-striped table-condensed" id="address">
      <thead>
        <tr>
          <th>Line 1</th>
          <th>Line 2</th>
          <th>City</th>
          <th>State</th>
          <th>Zip</th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.line_1 %></td>
            <td><%= address.line_2 %></td>
            <td><%= address.city.name %></td>
            <td><%= address.state.abbreviation %></td>
            <td><%= address.zip.zipcode %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>