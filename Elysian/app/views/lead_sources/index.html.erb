<h2 class="page-header">Lead Sources</h2>
<%= link_to "Add Lead Source", new_lead_source_path %>
<div class="row">
  <div class="col-sm-12">
    <table class="table table-striped table-condensed display" id="people">
      <thead>
        <tr>
          <th>Name</th>
        </tr>
      </thead>
      <tbody>
        <% @lead_sources.each do |source| %>
          <tr>
            <td><%= source.name %></td>
              <div class="pull-right">
                <%= link_to edit_lead_source_path(source) do %>
                  <span class="glyphicon glyphicon-pencil"></span>
                <% end %>
                <%= link_to lead_source_path(source), data: { confirm: "Are you sure you want to delete #{ source.name }?" }, method: :delete do %>
                  <span class="glyphicon glyphicon-minus-sign"></span>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>