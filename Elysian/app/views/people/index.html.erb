<h2 class="page-header">People</h2>
<%= link_to "Add Person", new_person_path %>
<div class="row">
  <div class="col-sm-12">
    <table class="table table-striped table-condensed display" id="people">
      <thead>
        <tr>
          <th>Status</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Address</th>
          <th>Phone</th>
          <th>Email</th>
        </tr>
      </thead>
      <tbody>
        <% @people.each do |person| %>
          <tr>
            <td><%= best_in_place person, :lead_source, :as => :select, :collection => Person::list_lead_sources %></td>
            <td><%= best_in_place person, :first_name %></td>
            <td><%= best_in_place person, :last_name %></td>
            <td></td>
            <td><%= best_in_place person, :main_phone %> <%= person.phone_type %></td>
            <td><%= best_in_place person, :main_email %> 
              <div class="pull-right">
                <%= link_to person_path(person) do %>
                  <span class="glyphicon glyphicon-pencil"></span>
                <% end %>
                <%= link_to person_path(person), data: { confirm: "Are you sure you want to delete #{ person.full_name } and all of their contact data?" }, method: :delete do %>
                  <span class="glyphicon glyphicon-minus-sign"></span>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
