<div class="page-header">
  <h2>Tasks</h2>
  <%= link_to 'Add New', new_task_path %>
</div>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Status</th>
      <th>Task</th>
      <th>Completion</th>
      <th>Category</th>
      <th>Involved</th>
      <th>Date Due</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |t| %>
      <tr>
       <td></td>
       <td><%= t.task %></td>
       <td></td>
       <td><%= t.category(t.task_category_id) %></td>
       <td></td>
       <td></td>
       <td></td>
      </tr>
    <% end %>
  </tbody>
</table>